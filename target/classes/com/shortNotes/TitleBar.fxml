<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<HBox xmlns:fx="http://javafx.com/fxml"
      fx:id="titleBar"
      fx:controller="com.shortNotes.TitleBarController"
      style="-fx-background-color: #2c3e50;" alignment="CENTER_LEFT" spacing="10">

    <padding>
        <Insets right="10.0" left="10.0"/>
    </padding>

    <Button text="+" onAction="#onAddNoteClicked" style="-fx-background-color: transparent; -fx-text-fill: white;"/>

    <Pane HBox.hgrow="ALWAYS"/>
    <Button text="_" onAction="#onMinimizeClicked" style="-fx-background-color: transparent; -fx-text-fill: white;"/>
    <Button fx:id="closeButton" text="X" onAction="#onCloseClicked" style="-fx-background-color: transparent; -fx-text-fill: white;"/>


</HBox>
